<Page x:Class="MovieDatabase.UI.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label Grid.Row="0">Username</Label>
        <TextBox Grid.Row="0" Margin="50" Text="{Binding UsernameValue}"/>
        <Label Grid.Row="1">Password</Label>
        <TextBox Grid.Row="1" Margin="50" Text="{Binding PasswordValue}"/>
        <Button Grid.Column="0" Grid.Row="2" Click="Login_Click" Margin="50" Width="200">Login</Button>
    </Grid>
</Page>
